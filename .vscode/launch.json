{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ApiLogicServer",
            "type": "python",
            "request": "launch",
            "program": "api_logic_server_run.py",
            "redirectOutput": true,
            "justMyCode": false,
            "args": ["localhost", "5656"],
            "console": "integratedTerminal"
        },
        {
            "name": "Behave Run",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/test/api_logic_server_behave",
            "program": "${workspaceFolder}/test/api_logic_server_behave/behave_run.py",
            "redirectOutput": true,
            "args": [ "--outfile=${workspaceFolder}/test/api_logic_server_behave/logs/behave.log"],
            "justMyCode": false,            
            "console": "integratedTerminal"
        },
        {
            "name": "Windows Behave Run",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}\\test\\api_logic_server_behave\\features",
            "program": "${workspaceFolder}\\test\\api_logic_server_behave\\behave_run.py",
            "redirectOutput": true,
            "args": [ "--outfile=${workspaceFolder}\\test\\api_logic_server_behave\\logs\\behave.log"],
            "justMyCode": false,            
            "console": "integratedTerminal"
        },
        {
            "name": "Behave Scenario",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/test/api_logic_server_behave",
            "program": "${workspaceFolder}/test/api_logic_server_behave/behave_run.py",
            "redirectOutput": true,
            "args": [ "--outfile=${workspaceFolder}/test/api_logic_server_behave/logs/behave.log",
                "--name=Clone Existing Order"],
            "justMyCode": false,            
            "console": "integratedTerminal"
        },
        {
            "name": "Behave Logic Report",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/test/api_logic_server_behave",
            "program": "${workspaceFolder}/test/api_logic_server_behave/behave_logic_report.py",
            "redirectOutput": true,
            "justMyCode": false,            
            "args": ["run"
                ,"--prepend_wiki=reports/Behave Logic Report Intro.md"
                ,"--wiki=reports/Behave Logic Report.md"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Basic Server Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test/basic/server_test.py",
            "redirectOutput": true,
            "justMyCode": false,
            "args": ["go"],
            "console": "integratedTerminal"
        },
        {
            "name": "Basic Web App",
            "type": "python",
            "request": "launch",
            "program": "run.py",
            "args": ["localhost", "5002"],
            "redirectOutput": true,
            "justMyCode": false,            
            "cwd": "${workspaceFolder}/ui/basic_web_app",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "redirectOutput": true,
            "justMyCode": false,            
            "module": "enter-your-module-name"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "redirectOutput": true,
            "justMyCode": false,            
            "console": "integratedTerminal"
        }
    ]
}